# ~/.gemrc
# Configuration for RubyGems

# Default sources - Use the official, secure source.
:sources:
  - https://rubygems.org

# Default options for 'gem install'
# --no-document is an alias for --no-rdoc --no-ri
# Disables generation/installation of RDoc and RI documentation for gems,
# speeding up installation and saving disk space.
install: --no-document

# Default options for 'gem update'
update: --no-document

# Optional: Show full backtrace on errors (useful for debugging gem command failures)
# backtrace: true

# Optional: Make gem commands verbose by default (usually not needed)
# verbose: true
